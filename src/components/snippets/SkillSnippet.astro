---
import type { SkillsFrontmatter } from "../../lib/types";
import { Icon } from 'astro-icon/components'

export type Props = {
  skill: SkillsFrontmatter;
};

const { skill } = Astro.props;

---

<div class="flex flex-col gap-3 pb-8 mx-5 items-center">
    <Icon name={skill.icon??"icon"} class="h-10 w-10" />
    <p class="text-xl">{skill.name}</p>
</div>
