---
import type { CertificationFrontmatter } from "../../lib/types";
import { GLOBAL } from "../../lib/variables";
import CertificationSnippet from "../snippets/CertificationSnippet.astro";

type Props = {
  certification: Array<CertificationFrontmatter>;
};

const { certification } = Astro.props;
---

<div class="flex justify-between items-center w-full">
  <h3 class="font-display text-lg sm:text-xl leading-loose">{GLOBAL.certificationsName}</h3>
</div>
<ul class="my-8">
  {
    (certification.length === 0 && <p>{GLOBAL.noCertifications}</p>) ||
      certification.map((certification) => (
        <li>
          <CertificationSnippet
            certification={certification}
          />
        </li>
      ))
  }